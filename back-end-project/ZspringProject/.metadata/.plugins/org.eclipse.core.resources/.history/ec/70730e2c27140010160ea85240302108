package ArrayQuestions;

import java.util.Arrays;

public class RepeatedElementsPick {

	public static void main(String[] args) {

//		<<<<-----------print repeated element in array-------->>>>>>>>

//		int[] arr=new int[] {2,4,1,2,1};
//		System.out.print("repeated elements are :");
//		for(int i=0;i<arr.length;i++) {
//			for(int j=i+1;j<arr.length;j++) {
//				if(arr[i]==arr[j]) {
////			-----index position print of repeated elements----
//					System.out.print(i+" "); 
////			----index position print of repeated elements-----
////					System.out.print(arr[i]+" ");
//				}
//				
//			}
//			
//		}
//		

//		<<<<<<<<--------------print repeated element with frequency in array-------->>>>>>>>

		int[] arr = new int[] { 2, 3, 2, 6, 3, 6, 6 };
		int i, j, count;
		Arrays.sort(arr);
		System.out.print("Array after sortings :");
		for (int x : arr) {
			System.out.print(x + " ");
		}
		System.out.println();
		System.out.println("Repeated array elements with frequency are :");
		for (i = 0; i < arr.length; i++) {
			count = 1;
			for (j = i + 1; j < arr.length; j++) {
				if (arr[i] == arr[j]) {
					count++;
				} else {

					break;
				}

			}
			i = j - 1;

			if (count > 1) {
				System.out.println(arr[i] + "=" + count);
				System.out.print(i);
			}
		}

	}

}
